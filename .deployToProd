#!/bin/bash
echo "Deploying cert to server..."
rsync -r ./certs/* ubuntu@18.191.239.40:/etc/certs/

echo "Deploying nginx.conf to server..."
rsync -r ./deploy/nginx/nginx.conf ubuntu@18.191.239.40:/etc/nginx

echo "Deploying prod build to AWS sketch.games server..."
rsync -r ./dist/* ubuntu@18.191.239.40:/var/www/sketch.games/dist

echo "Deploying ecosystem.config.js..."
rsync -r ./deploy/* ubuntu@18.191.239.40:/home/ubuntu/deploy
ssh -t "ubuntu@18.191.239.40" 'bash -i -c "chmod +x /home/ubuntu/deploy/restart.sh"'

echo "Done deploying to stage. See result at http://sketch.games"

ssh -t "ubuntu@18.191.239.40" 'bash -i -c ". /home/ubuntu/deploy/restart.sh"'
